<%- messages() %>
<% if (errors) { %>
    <ul class="notice-bad">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>
<h1 class="page-title"><%- title %></h1>
<form action="/account/register" method="post" class="register-form">
    <div class="form-group">
        <label for="account_firstname">First Name</label>
        <input type="text" class="form-control" id="account_firstname" name="account_firstname" required placeholder="First Name" value="<%= locals.account_firstname %>">
    </div>
    <div class="form-group">
        <label for="account_lastname">Last Name</label>
        <input type="text" class="form-control" id="account_lastname" name="account_lastname" required placeholder="Last Name" value="<%= locals.account_lastname %>">
    </div>
    <div class="form-group">
        <label for="account_email">Email</label>
        <input type="email" class="form-control" id="account_email" name="account_email" required placeholder="Email" value="<%= locals.account_email %>">
    </div>
    <!-- 12 chars in length
        contains at least 1 capital letter
        contain at least 1 number
        contain at least 1 special character
        -->
    <div class="form-group">
        <div class="password-requirements">
            <p>Password must be at least 12 characters in length and contain:</p>
            <ul class="pwspecs">
                <li>1 capital letter</li>
                <li>1 number</li>
                <li>1 special character</li>
            </ul>
        <label for="account_password">Password</label>
        <input type="password" class="form-control" id="account_password" name="account_password" required placeholder="Password"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>