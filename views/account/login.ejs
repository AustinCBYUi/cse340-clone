<%- messages() %>
<% if (errors) { %>
    <ul class="notice-bad">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>
<h1><% -title %></h1>
<form id="loginForm" action="/account/login" method="post" class="login">
    <div class="form-group">
        <label for="account_email">Email</label>
        <input type="email" class="form-control" id="account_email" name="account_email" required placeholder="Email" <%= locals.account_email %>>
    </div>
    <div class="form-group">
        <label for="account_password">Password</label>
        <input type="password" class="form-control" id="account_password" name="account_password" required placeholder="Password"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <p class="register">Don't have an account? <a href="/account/register">Register</a></p>
</form>